		                    <inputwebxml>${project.basedir}/src/main/webapp/WEB-INF/web.xml</inputwebxml>  
		                    <source>1.6</source>
		                    <target>1.6</target>  
		                    <sources>  
		                        <directory>${project.basedir}/src/main/webapp</directory>  
		                        <includes>  
		                            <include>**/*.jsp</include>  
		                        </includes>  
		                    </sources>  
		                    <includeInProject>false</includeInProject> <!--  only for validation -->
